    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.testLocation.com/test ../testSchema.xsd">

    <!-- Common tests with both families -->
    <test>
        <name>Common FlexRIO</name>
        <TestFilter>Common.*</TestFilter>
        <TestType>irioCore Functional</TestType>
        <RIODevice>%%%COMMONDEVICE%%%</RIODevice>
        <RIOSerial>%%%COMMONSERIAL%%%</RIOSerial>
        <RIOModule>noModule</RIOModule>
        <verbose>%%%VERBOSE%%%</verbose>
    </test>

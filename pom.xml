<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.iter.codac.units</groupId>
    <artifactId>irio</artifactId>
    <packaging>codac</packaging>
    <version>1.3.0</version>
    <name>CODAC Core System IRIO Core Library Module</name>
    <description>CODAC Core System IRIO core library module</description>
    <url>http://www.iter.org/</url>
 
    <!-- project properties -->
    <properties>
        <unit.type>module</unit.type>
    </properties>

    <!-- parent pom.xml -->
    <parent>
        <groupId>org.iter.codac.units</groupId>
        <artifactId>maven-iter-settings</artifactId>
        <version>7.2.0</version>
    </parent>

    <!-- unit owner and developers -->
    <developers>
        <developer>
            <id>vcosta</id>
            <roles>
                <role>unit owner</role>
            </roles>
        </developer>
    </developers>

    <!-- configuration of how the project is built -->
    <build>
        <!-- default phase is compile -->
        <defaultGoal>compile</defaultGoal>
        <!-- this command is executed if you just write 'mvn' -->
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-iter-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <packaging>
                        <package name="bfp">
                            <requires codac="false">pugixml</requires>
                            <include name="bfp" type="library" />
                        </package>
                        <package develof="bfp">
                        	<include type="file" source="main/c++/bfp/include" target="include/bfp" />
                        </package>
                        <package name="cpp">
                            <requires codac="true">irio-bfp</requires>
                            <requires codac="true">kmod-nirio</requires>
                            <include name="irioCoreCpp" type="library" />
                        </package>
                        <package develof="cpp">
                            <include type="file" source="main/c++/irioCoreCpp/include" target="include/irioCoreCpp">
                                <include>*.h</include>
                                <exclude>utils.h</exclude>
                                <exclude>rioDiscovery.h</exclude>
                                <exclude>parserManager.h</exclude>
                            </include>

                            <include type="file" source="main/c++/irioCoreCpp/include/terminals" target="include/irioCoreCpp/terminals">
                                <include>*.h</include>
                            </include>
                        </package>

                        <package>
                            <requires codac="true">irio-cpp</requires>
                            <include name="irioCore" type="library" />
                        </package>
                        <package develof="">
                            <include type="file" source="main/c++/irioCore/include" target="include/irioCore">
                                <include>*.h</include>
                            </include>
                        </package>

                        <package name="examples">
                            <requires codac="true">irio</requires>
                            <include type="file" source="test/c/legacy_examples" target="examples/irio">
                                <include>resourceFail</include>
                                <include>resourceTest</include>
                            </include>
                        </package>

                        <package name="doc">
                            <include type="doxygen" name="irioCoreCpp" project="${project.name}" version="${project.version}" optimize="cpp">
                                <filepattern>*.dox</filepattern>
                				<filepattern>*.h</filepattern>
                				<filepattern>*.cpp</filepattern>
                                <outputformat>html</outputformat>
                                <!-- <outputformat>pdf</outputformat> -->
                                <input>main/doc</input>
                                <input>main/c++/bfp/include</input>
                                <input>main/c++/irioCoreCpp/include</input>
                                <input>main/c++/irioCore/include</input>
                                <imagepath>images</imagepath>
                                <properties>
                                    <SORT_MEMBER_DOCS>NO</SORT_MEMBER_DOCS> 
                                    <HIDE_UNDOC_CLASSES>NO</HIDE_UNDOC_CLASSES>
                                    <RECURSIVE>YES</RECURSIVE>
                                    <EXTRACT_ALL>YES</EXTRACT_ALL>
									<HIDE_UNDOC_MEMBERS>NO</HIDE_UNDOC_MEMBERS>
                                    <EXTRACT_PRIVATE>YES</EXTRACT_PRIVATE>
                                    <SOURCE_BROWSER>YES</SOURCE_BROWSER>
                					<DOT_FONTSIZE>10</DOT_FONTSIZE>
                                    <CLASS_GRAPH>YES</CLASS_GRAPH>
                                    <CLASS_DIAGRAMS>YES</CLASS_DIAGRAMS>
                                    <COLLABORATION_GRAPH>NO</COLLABORATION_GRAPH>
                                    <GROUP_GRAPHS>YES</GROUP_GRAPHS>
                                    <INCLUDE_GRAPH>YES</INCLUDE_GRAPH>
                                    <INCLUDED_BY_GRAPH>YES</INCLUDED_BY_GRAPH>
                                    <CALL_GRAPH>YES</CALL_GRAPH>
                                    <CALLER_GRAPH>YES</CALLER_GRAPH>
                                    <GRAPHICAL_HIERARCHY>YES</GRAPHICAL_HIERARCHY>
                                    <DIRECTORY_GRAPH>YES</DIRECTORY_GRAPH>
                                    <DOT_IMAGE_FORMAT>svg</DOT_IMAGE_FORMAT>
                                    <GENERATE_TREEVIEW>YES</GENERATE_TREEVIEW>
                                    <EXTRACT_STATIC>YES</EXTRACT_STATIC>
                                    <UML_LOOK>YES</UML_LOOK>
                                    <UML_LIMIT_NUM_FIELDS>50</UML_LIMIT_NUM_FIELDS>
                                    <HAVE_DOT>YES</HAVE_DOT>
                                    <DOT_GRAPH_MAX_NODES>100</DOT_GRAPH_MAX_NODES>
                                    <MAX_DOT_GRAPH_DEPTH>0</MAX_DOT_GRAPH_DEPTH>
                                    <DOT_TRANSPARENT>YES</DOT_TRANSPARENT>
                                    <INTERACTIVE_SVG>YES</INTERACTIVE_SVG>
                                </properties>
                            </include>
                        </package>
                    </packaging>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
